<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net461</TargetFrameworks>
    <RootNamespace>ServiceModel.Grpc</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' != 'Debug'">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="protobuf-net" Version="2.4.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ServiceModel.Grpc\ServiceModel.Grpc.csproj" />
  </ItemGroup>

  <Target Name="AdditionalPackageContent">
    <ItemGroup>
      <TfmSpecificPackageFile Include="..\..\LICENSE">
        <PackagePath></PackagePath>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="..\..\build-out\ProtoBufThirdPartyNotices.txt">
        <PackagePath>ThirdPartyNotices.txt</PackagePath>
      </TfmSpecificPackageFile>
    </ItemGroup>
  </Target>
</Project>
