<Project>
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
	
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\ServiceModel.Grpc.snk</AssemblyOriginatorKeyFile>
    
    <CodeAnalysisRuleSet>..\StyleCope.ruleset</CodeAnalysisRuleSet>

    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Max Ieremenko</Authors>
    <Description>Library that enable applications to comminicate with gRPC services using code-first approach.</Description>
    <PackageReleaseNotes>https://github.com/max-ieremenko/ServiceModel.Grpc/releases</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/max-ieremenko/ServiceModel.Grpc</RepositoryUrl>
    <PackageProjectUrl>https://github.com/max-ieremenko/ServiceModel.Grpc</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <Copyright>(C) 2020 Max Ieremenko.</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageTags>gRPC WCF ServiceModel grpc-dotnet</PackageTags>
    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);AdditionalPackageContent</TargetsForTfmSpecificContentInPackage>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\GlobalAssemblyInfo.cs" Link="Properties\GlobalAssemblyInfo.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  
</Project>